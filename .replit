entrypoint = "main.go"
run = ["go", "run", "."]

modules = ["go-1.24"]

[env]
GOPATH="$REPL_HOME/gopath"

[nix]
channel = "stable-24_05"

[gitHubImport]
requiredFiles = [".replit"]

[deployment]
build = "CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -o main"
run = "./main"
ignorePorts = false
deploymentTarget = "gce"

[[ports]]
localPort = 3000
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Go Server"

[[workflows.workflow]]
name = "Go Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "go run main.go"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"
